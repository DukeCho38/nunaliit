<assembly 
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
	>
	<id>couch-apps</id>
	<baseDirectory>couch-apps</baseDirectory>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<!-- Internal directories -->
		<fileSet>
			<directory>src/main/atlas_couchapp</directory>
			<outputDirectory>atlas_couchapp/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/config_couchapp</directory>
			<outputDirectory>config_couchapp/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/server_couchapp</directory>
			<outputDirectory>server_couchapp/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/submission_couchapp</directory>
			<outputDirectory>submission_couchapp/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/initializeDocs</directory>
			<outputDirectory>initializeDocs/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/updateDocs</directory>
			<outputDirectory>updateDocs/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>