<assembly 
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
	>
	<id>nunaliit</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<!--  tarLongFileMode>gnu</tarLongFileMode -->
	<fileSets>
		<!-- Command line application -->
		<fileSet>
			<directory>target/appassembler/bin</directory>
			<outputDirectory>${file.separator}bin${file.separator}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/appassembler/repo</directory>
			<outputDirectory>${file.separator}repo${file.separator}/</outputDirectory>
		</fileSet>

		<!-- Internal directories -->
		<fileSet>
			<directory>src/main/install</directory>
			<outputDirectory>${file.separator}install${file.separator}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/content</directory>
			<outputDirectory>${file.separator}content${file.separator}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/templates</directory>
			<outputDirectory>${file.separator}templates${file.separator}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/internal</directory>
			<outputDirectory>${file.separator}internal${file.separator}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchApps/couch-apps/atlas_couchapp</directory>
			<outputDirectory>${file.separator}internal${file.separator}atlasDesign</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchApps/couch-apps/submission_couchapp</directory>
			<outputDirectory>${file.separator}internal${file.separator}submissionDesign</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchMobile/WEB-INF/mobile_couchapp/app</directory>
			<outputDirectory>${file.separator}internal${file.separator}mobileDesign</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/nunaliit2-js/nunaliit2</directory>
			<outputDirectory>${file.separator}internal${file.separator}nunaliit2</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/js-external/js-external</directory>
			<outputDirectory>${file.separator}internal${file.separator}js-external</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchApps/couch-apps/initializeDocs</directory>
			<outputDirectory>${file.separator}internal${file.separator}initializeDocs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchApps/couch-apps/updateDocs</directory>
			<outputDirectory>${file.separator}internal${file.separator}updateDocs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/couchApps/couch-apps/server_couchapp</directory>
			<outputDirectory>${file.separator}internal${file.separator}serverDesign</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>